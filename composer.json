{
    "name": "brick/money",
    "description": "Money and currency library",
    "type": "library",
    "keywords": [
        "Brick",
        "Money",
        "Currency"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "brick/math": "~0.7.3 || ~0.8.0 || ~0.9.0"
    },
    "require-dev": {
        "ext-dom": "*",
        "ext-pdo": "*",
        "brick/varexporter": "~0.2.1",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "^9.4.3",
        "vimeo/psalm": "4.23.0"
    },
    "suggest": {
        "ext-intl": "Required to format Money objects"
    },
    "autoload": {
        "psr-4": {
            "Brick\\Money\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brick\\Money\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
